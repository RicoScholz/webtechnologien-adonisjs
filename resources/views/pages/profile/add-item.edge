<form class="container-sm my-5 p-5 shadow rounded-3 needs-validation" action="{{ route('items.add') }}" method="POST" enctype="multipart/form-data" novalidate>
    {{ csrfField() }}
    <h4 class="text-center font-weight-bold mb-5">Anzeige aufgeben</h4>

    <div class="form-floating mb-5">
        <input type="text" class="form-control" id="titleInput" name="title" placeholder="" required>
        <label for="titleInput" class="form-label">Titel</label>
        <div class="invalid-feedback position-absolute">
            Bitte geben Sie einen Titel ein!
        </div>
    </div>
    <div class="form-floating mb-5">
        <textarea class="form-control" id="descriptionInput" name="description" placeholder="" required></textarea>
        <label for="descriptionInput" class="form-label">Beschreibung</label>
        <div class="invalid-feedback position-absolute">
            Bitte geben Sie eine passende Beschreibung ein!
        </div>
    </div>
    <div class="form-floating mb-5">
        <input type="number" class="form-control" id="priceInput" name="price" min="0.01" placeholder="" required>
        <label for="priceInput" class="form-label">Preis</label>
        <div class="invalid-feedback position-absolute">
            Bitte wählen sie einen Preis!
        </div>
    </div>

    <div class="mb-5">
        <label for="formFile" class="form-label">Anzeigebilder</label>
        <input class="form-control" type="file" id="formFile" name="item_images" multiple required maxlength="5">
        <div class="invalid-feedback position-absolute">
            Bitte wählen Sie mindestens ein und maximal fünf Anzeigebilder!
        </div>
    </div>

    <div class="border border-2 w-100 mb-5 d-flex justify-content-center align-items-center" style="min-height:250px" id="multiple-img-preview">
        <span class="fs-1 fw-medium text-body-tertiary">Bilder Vorschau</span>
    </div>

    <button type="submit" class="btn btn-primary ">Erstellen</button>
</form>